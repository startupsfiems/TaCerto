@model TaCertoForms.Models.Turma

@{
    ViewBag.Title = "Edit";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Edição de Turma
        </h1>
        <ol class="breadcrumb">
            <li>
                <a data-toggle="tooltip" data-placement="bottom" data-original-title="Voltar para a tela de boas vindas" href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Início</a>
            </li>
            <li class="active">
                <a data-toggle="tooltip" data-placement="bottom" data-original-title="Listagem de turmas" href="@Url.Action("Index", "Turma")">Turmas</a>
            </li>
        </ol>
    </section>

    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Edição de Registro</h3>
                <a data-toggle="tooltip" data-placement="bottom" data-original-title="Voltar para a listagem de turmas" href="@Url.Action("Index", "Turma")" class="btn btn-sm btn-default btn-flat pull-right">Voltar</a>
            </div>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="box-body">
                    <div class="col-xs-6">
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IdTurma)

                            <div class="form-group col-xs-12">
                                @Html.Label("Turma")
                                @Html.EditorFor(model => model.Serie, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Serie, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-xs-12">
                                @Html.Label("Período")
                                @Html.EnumDropDownListFor(model => model.Periodo, htmlAttributes: new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.Periodo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-xs-12">
                                @Html.Label("Instituição")
                                @Html.DropDownListFor(model => model.IdInstituicao, ViewBag.InstituicaoList as SelectList, "Turma", new { @id = "myid", @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.IdInstituicao, "", new { @class = "error" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <input data-toggle="tooltip" data-placement="bottom" data-original-title="Atualizar turma" type="submit" value="Salvar" class="btn btn-primary pull-right" />
                </div>
            }
        </div>
    </section>
</div>   