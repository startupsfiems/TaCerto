@model IEnumerable<TaCertoForms.Models.Turma>

@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Turmas
        </h1>
        <ol class="breadcrumb">
            <li>
                <a data-toggle="tooltip" data-placement="bottom" data-original-title="Voltar para a tela de boas vindas" href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Início</a>
            </li>
            <li class="active">
                <a data-toggle="tooltip" data-placement="bottom" data-original-title="Listagem de turmas" href="@Url.Action("Index", "Turma")">Turmas</a>
            </li>
        </ol>
    </section>

    <section class="content">
        <div class="alert-message"></div>
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <a data-toggle="tooltip" data-placement="bottom" data-original-title="Cadastro de nova turma" href="@Url.Action("Create", "Turma")" class="btn-cadastro btn btn-sm btn-primary btn-flat pull-right">Novo registro</a>
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Turma
                            </th>
                            <th>
                                Período
                            </th>
                            <th>
                                Instituição
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Serie)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Periodo)
                                    </td>
                                    <td>
                                        @foreach (var instituicao in ViewBag.InstituicaoList)
                                        {
                                            if (instituicao.IdInstituicao == item.IdInstituicao)
                                            {
                                                @instituicao.NomeFantasia
                                            }
                                        }
                                    </td>
                                    <td>
                                        <a data-toggle="tooltip" data-placement="bottom" data-original-title="Edição de turma" href="@Url.Action("Edit", "Turma", new { id = item.IdTurma })" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                        <!--
                                    <a href="@Url.Action("Delete", "Turma", new { id = item.IdTurma })" class="btn btn-danger btn-xs"><i class="fa fa-remove"></i></a>
                                    -->
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
</div>

<script type="text/javascript">

    $('#example1').DataTable({
        "language": dados_translate,
         "columnDefs": [{
            "targets": 3,
            "orderable": false
        }]
    });
</script>

