@model TaCertoForms.Models.ViewModelAtividade
<div class="row">    
    <div class="col-xs-12 col-md-6">
        <div class="row">
            @using (Html.BeginForm())
            {
                @Html.TextBox("IdQuestao", null, new { @id = "tabela-de-certo-erradoIdQuestao", @type = "hidden" })
                @*
                    <div class="form-group col-xs-12">
                        @Html.Label("Título")
                        @Html.TextBox("Titulo_certoerrado", null, new { @class = "form-control", @id = "tabela-de-certo-erradoTitulo" })
                    </div>
                *@
                <div class="form-group col-xs-12" data-toggle="tooltip" data-placement="bottom" data-original-title="Cadastro da afirmativa, seja correta ou incorreta">
                    @Html.Label("Enunciado")
                    @Html.TextArea("Enunciado", null, new { @class = "form-control", @id = "tabela-de-certo-erradoEnunciado" })
                </div>
                <div class="form-group col-xs-12" data-toggle="tooltip" data-placement="bottom" data-original-title="Valor proporcional da nota baseado na soma total dos pesos. OBS: Todas as atividades cadastradas terão o valor de 100%, o peso da nota definido em cada questão definirá qual a porcentagem representará na soma total">
                    @Html.Label("Peso Nota")
                    @Html.TextBox("PesoNota", null, new { @class = "form-control", @type = "number", @step = ".01", @min = "1", @id = "tabela-de-certo-erradoPesoNota" })
                </div>
                <div id="tabela-de-certo-erradoDivImagem" class="div-image"></div>

                <div class="form-group col-xs-12" data-toggle="tooltip" data-placement="bottom" data-original-title="Selecione se a afirmativa cadastrada no campo 'Enunciado' é verdadeira ou falsa">
                    @Html.Label("Resposta")
                    @Html.DropDownList("VerdadeiroFalso",
                    new List<SelectListItem> {
                        new SelectListItem() { Text = "Verdadeiro", Value = true.ToString()},
                        new SelectListItem() { Text = "Falso", Value = false.ToString()}
                    },
                    null,
                    new { @class = "form-control", @id = "tabela-de-certo-erradoResposta" })
                </div>
                <div class="form-group col-xs-12">
                    <input data-toggle="tooltip" data-placement="bottom" data-original-title="Após clicar no botão a questão estará cadastrada em nosso sistema" type="button" value="Adicionar" class="btn btn-success" onclick="AddQuestao('tabela-de-certo-errado')" />
                </div>
            }
        </div>
    </div>
    <div class="col-xs-12 col-md-6">
        <table id="tabela-de-certo-errado" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    @*<th>Título</th>*@
                    <th>Enunciado</th>
                    <th>Peso Nota</th>
                    <th>Ações</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

