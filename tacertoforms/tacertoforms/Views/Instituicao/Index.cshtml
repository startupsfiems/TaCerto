@model IEnumerable<TaCertoForms.Models.Instituicao>

@{
    ViewBag.Title = "Index";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Instituições
        </h1>
        <ol class="breadcrumb">
            <li>
                <a data-toggle="tooltip" data-placement="bottom" data-original-title="Voltar para a tela de boas vindas" href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Início</a>
            </li>
            <li class="active">
                <a data-toggle="tooltip" data-placement="bottom" data-original-title="Listagem de instituições"  href="@Url.Action("Index", "Instituicao")">Instituições</a>          
            </li>
        </ol>
    </section>


    <section class="content">        
        <div class="alert-message"></div>
        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">
                <a data-toggle="tooltip" data-placement="bottom" data-original-title="Cadastrar uma nova instituição" href="@Url.Action("Create", "Instituicao")" class="btn-cadastro btn btn-sm btn-primary btn-flat pull-right">Novo registro</a>
                <table id="example1" class="table table-bordered  table-striped">
                    <thead>
                        <tr>
                            <th>Razão Social</th>
                            <th>Nome Fantasia</th>
                            <th>@Html.DisplayNameFor(model => model.CNPJ)</th>
                            <th>E-mail</th>
                            <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeFantasia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CNPJ)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefone)
                                </td>
                                <td>
                                    <a data-toggle="tooltip" data-placement="bottom" data-original-title="Editar informações da instituição" href="@Url.Action("Edit", "Instituicao", new { id = item.IdInstituicao })" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                    @*<a href="@Url.Action("Delete", "Instituicao", new { id = item.IdInstituicao })" class="btn btn-danger btn-xs"><i class="fa fa-remove"></i></a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
</div>

<script type="text/javascript">

    $('#example1').DataTable({
        "language": dados_translate,
        "columnDefs": [{
            "targets": 5,
            "orderable": false
        }]
    });
</script>
